<%= turbo_frame_tag email,
    class: [
      'hover:bg-gray-50 cursor-pointer block',
      'bg-white' => email.read?,
      'bg-blue-50' => !email.read?,
      'border-l-4 border-blue-600' => selected
    ] do %>

  <%= link_to email_path(email),
    class: 'p-4 block',
    data: {
      turbo_stream: true,
      turbo_prefetch: false,
      action: 'click->inbox#selectEmail',
      email_id: email.id
    } do %>

    <div class='flex justify-between items-start'>
      <div class='flex-grow min-w-0'>
        <div class='flex items-center'>
          <svg class='<%= class_names(
            'h-4 w-4 p-0 mr-1',
            'text-yellow-400 fill-current' => email.starred?,
            'text-gray-400' => !email.starred?
          ) %>' fill='currentColor' viewBox='0 0 20 20'>
            <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z'/>
          </svg>
          <%= tag.span email.from, class: ['font-medium', 'font-bold' => !email.read?] %>
        </div>

        <%= tag.div email.subject, class: ['font-bold' => !email.read?] %>

        <div class='text-sm text-gray-600 truncate mt-1'>
          <%= truncate(email.body, length: 100) %>
        </div>

        <% if email.labels.any? %>
          <div class='mt-2 flex flex-wrap gap-1'>
            <% email.labels.each do |label| %>
              <span class='inline-block px-2 py-1 text-xs bg-gray-100
                           text-gray-700 rounded-full'>
                <%= label %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
